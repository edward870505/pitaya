@import '../../../templates/add_item_page/common.wxss';
@import '../../../templates/add_item_page/center_container_form/center_container_form.wxss';
view.species_container{
  display: flex;
  flex-direction: column;
}

image.add_species_btn{
  width: 60rpx;
  height: 60rpx;

}

view.species_container view.species_container_bottom{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #5a5959;
  padding:20rpx;
  border: 1px solid #8f8f8f;
}


view.species_container_bottom_hover{
  background-color: #e9e9e9;
  color: white;
}

view.species_container_top{
  margin-bottom:15rpx;
  border: 1px solid #8f8f8f;
  display: flex;
  align-items: center;
  padding-top: 20rpx;
}

view.species_container_top_left{
  display: flex;
  align-content: center;
  margin-left:10rpx;
}

view.species_container_top_center{
  flex-basis: 28%;
  margin-left: 10rpx;
  display: flex;
  color:   #aaaaaa;
}

view.species_container_top_right{
  flex-basis: 55%;
}

view.species_container_top_right input,
view.species_container_top_right picker{
    border-bottom: 1px solid;
    color: black;
    margin-bottom:20rpx;

}

image.species_img{
  width: 50rpx;
  height:50rpx;
}
view.prediction_section{
  min-height:200rpx;
  max-height:auto;
  display:flex;
  flex-direction: column;
  margin-bottom:15rpx;
  border:1px solid #8f8f8f;
  padding-bottom:15rpx;
  padding-top:15rpx;
  padding-left:10rpx;
}

view.prediction_section_top{
  display: flex;
}

view.prediction_section_top view.left{
  flex-basis: 5%;
}

view.prediction_section_top view.left image,
view.prediction view.left image{
  width: 50rpx;
  height: 50rpx;
}

view.prediction_section_top view.center{
  flex-basis: 28%;
  padding-left: 10rpx;
}

view.prediction_section_top view.right{
  flex-basis: 55%;
}

view.prediction_section_bottom{
  display: flex;
  flex-direction: column;
}


view.prediction_section text.label{
  color:#aaaaaa;
}
view.prediction view.left{
  flex-basis: 5%;
}

view.prediction view.center{
  flex-basis: 28%;
  padding-left:10rpx;
}

view.prediction view.right{
  flex-basis: 55%;
}

view.prediction_section_bottom view.prediction{
  display: flex;
}

view.prediction_outter{
  margin-bottom: 15rpx;
  width: 95%;
  margin-left: 13rpx;
  padding-top: 15rpx;
  padding-left: 15rpx;
  background-color: #f0eeee;
}

view.prediction_section_top{
  margin-bottom: 15rpx;
}

view.border{

}

view.addPredictionBtn{
  border: 1px solid #8f8f8f;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

view.predictionBtnHover{
  background-color: #e6e4e4;
}

view.prediction{
  margin-bottom: 15rpx;
}

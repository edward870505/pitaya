/* pages/scheme/add/add.wxss */
@import '../../../templates/add_item_page/common.wxss';
@import '../../../templates/add_item_page/center_container_form/center_container_form.wxss';

view.scheme_container{
  display: flex;
  flex-direction: column;
}

image.add_scheme_btn{
  width: 60rpx;
  height: 60rpx;

}

view.scheme_container view.scheme_container_bottom{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #5a5959;
  padding:20rpx;
  border: 1px solid #8f8f8f;
}


view.scheme_container_bottom_hover{
  background-color: #e9e9e9;
  color: white;
}

view.scheme_container_top{
  margin-bottom:15rpx;
  border: 1px solid #8f8f8f;
  display: flex;
  align-items: center;
  padding-top: 20rpx;
}

view.scheme_container_top_left{
  display: flex;
  align-content: center;
  margin-left:10rpx;
}

view.scheme_container_top_center{
  flex-basis: 28%;
  margin-left: 10rpx;
  display: flex;
  color:   #aaaaaa;
}

view.scheme_container_top_right{
  flex-basis: 55%;
}

view.scheme_container_top_right input,
view.scheme_container_top_right picker{
    border-bottom: 1px solid;
    color: black;
    margin-bottom:20rpx;

}

image.scheme_img{
  width: 50rpx;
  height:50rpx;
}
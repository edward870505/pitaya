asdfsdfview.outter_container{
  height: 100%;
  display: flex;
  flex-direction: column;
}

view.top_container{
  flex-basis: 0%;
  display: flex;
  justify-content: center;
  align-items: center;
}

view.top_container text.page_title{
   font-size: 45rpx;
   font-weight: 600; 
}

view.center_container{
  padding-top:15rpx; 
  flex-basis: 100%;
  display: flex;
  justify-content: center;
  padding-bottom: 10rpx;
}

view.bottom_container{
  flex-basis: 0%;
}

view.center_container scroll-view{
  width: 95%;
  height: 100%;
  white-space: nowrap;
}

view.center_container scroll-view form view.btnGroup{
  padding: 15rpx;
}

picker{
   display: flex;
   align-items: center;
   border-bottom: 1px solid;
}

input{
   border-bottom: 1px solid;
}

textarea{
   border-bottom: 1px solid;
   width: 100%;

}

textarea.contenttextarea{
  margin-top: 15rpx;
  font-size: 30rpx;
  font-weight: bold;
  color:rgb(114, 112, 112);
  max-width: 100%;
  white-space: pre;

}

picker image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}



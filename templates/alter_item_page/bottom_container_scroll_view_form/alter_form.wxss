/* templates/alter_item_page/bottom_container_scroll_view_form/alter_form.wxss */
view.alter_section{
  border: 1px solid #8f8f8f;
  height: 200rpx;
  display: flex;
  margin-bottom: 15rpx;
}

view.other_section{
  height: auto;
}

view.alter_section_btn{
    padding: 10rpx;
}

view.alter_section_left{
  flex-basis: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
}

view.alter_section_left image{
  width: 50rpx;
  height: 50rpx;

}

view.alter_section_center{
  flex-basis: 30%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  color:#b4b3b3;

}

view.alter_section_right{
  flex-basis: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;

}

view.alter_section_right image{
  height: 30rpx;
  width:30rpx;
  margin-left: 5rpx;
}

view.alter_section_right picker,
view.alter_section_right input,
view.alter_section_right textarea{
  border-bottom:1px solid;
  display: flex;
  width:95%;
  margin-bottom: 10rpx;
}

view.alter_section_right textarea{

}

.placeholder{
  color: black;
}


view.radio-view-container{
  border-bottom:1px solid;
  width:95%;
}

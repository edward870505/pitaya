/* templates/operation_page/center_container_scroll_view/center_container_scroll_view.wxss */
view.center_container view.scroll_item{
  width: 100%;
  height: 350rpx;
  margin-bottom:25rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}

view.center_container view.scroll_item view.scroll_item_top{
  flex-basis: 20%;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  margin-top: 20rpx;
}

view.center_container view.scroll_item view.scroll_item_center{
  flex-basis: 63%;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  padding-top: 20rpx;
}

view.scroll_item_center text{
  font-size: 23rpx;
  color: #4d4c4c;
  padding-right: 10rpx;
  max-width: 85%;
  text-overflow: ellipsis;
  overflow: hidden;
}

view.center_container view.scroll_item view.scroll_item_bottom{
  flex-basis: 17%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 10rpx;
  padding-bottom: 15rpx;
}

view.center_container view.scroll_item view.scroll_item_top view.scroll_item_top_left{
  flex-basis: 80%;
  display: flex;
  align-content: center;
  
}

view.center_container view.scroll_item view.scroll_item_top view.scroll_item_top_right{
  flex-basis: 20%;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  padding-right: 15rpx;
}

image.scroll_item_top_left_img{
  height: 60rpx;
  width: 60rpx;
  margin-right:20rpx;
}

text.scroll_item_top_left_text{
  font-size: 35rpx;
  font-weight: bold;
  margin-right: 10rpx;
  border-bottom: 2px solid;
}

view.center_container view.scroll_item view.scroll_item_bottom image.operation_btn{
  width: 60rpx;
  height: 60rpx;
  margin-left: 15rpx;
}



view.scroll_item_center view{
  display: flex;
  flex-direction: column;
  padding-left:20rpx;
  margin-top:10rpx;
}

view.scroll_item_center view.content_text{
  font-size: 25rpx;
}

view.scroll_item_center view.prediction{
  flex-direction: row;
}

view.scroll_item_center view.inoutwarehouse{
  flex-direction: row;
  padding-left:0rpx;
}

view.scroll_item_center view text{
  margin-bottom: 5rpx;
}

text.scrollitem_smaller_text{
  font-size: 25rpx;
  align-self: center;
  font-weight: bold;
  margin-right: 10rpx;
  color: rgb(150, 148, 148);
}

